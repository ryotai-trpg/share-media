<default-media-settings>
    <p class="hint">{{localize (concat "share-media.settings." description)}}</p>

    {{!-- Blacklist --}}
    <div class="scrollable flexcol">
        {{~#each users as |user|}}
            <div class="form-group">
                {{!-- Label --}}
                <label for="{{user.id}}" class="flexrow">
                    <i class="shm padded pip" style="--pip-color: {{user.color.css}}"></i>{{user.name}}
                </label>

                {{!-- Field --}}
                <div class="shm form-fields">
                    <input type="checkbox" name="{{user.id}}" id="{{user.id}}"
                        {{~#if user.blacklisted}} checked {{~/if}}>
                </div>
            </div>
        {{~/each}}
    </div>

    {{!-- Footer --}}
    <footer class="form-footer">
        <button type="submit">
            <i class="{{icons.validate}}"></i>
            {{localize "share-media.base.validate"}}
        </button>
    </footer>
</default-media-settings>
